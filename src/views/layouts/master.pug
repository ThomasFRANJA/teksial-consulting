    //- Preload flexboxgrid
    link(rel='stylesheet', href='assets/styles/flexboxgrid.min.css' type="text/css")

    //- Preload fonts
    link(type='font/woff2', href=require('source/assets/fonts/montserrat-regular-webfont.woff2'), rel='prefetch', as='font', crossorigin)
